<Window x:Class="BS_IEWCS1_Marcus_Redmann.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="600"
        Width="1280">
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
                      HorizontalAlignment="Left"
                      Width="500"
                      MinWidth="500"
                      Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0"
                           Grid.Row="0"
                           Content="Name:" />
                    <Label Grid.Column="0"
                           Grid.Row="1"
                           Content="Vorname:" />
                    <Label Grid.Column="0"
                           Grid.Row="2"
                           Content="Strasse:" />
                    <Label Grid.Column="0"
                           Grid.Row="3"
                           Content="Hausnummer:" />
                    <Label Grid.Column="0"
                           Grid.Row="4"
                           Content="PLZ:" />
                    <Label Grid.Column="0"
                           Grid.Row="5"
                           Content="Ort:" />
                    <Label Grid.Column="0"
                           Grid.Row="6"
                           Content="Geburtsdatum:" />
                    <Label Grid.Column="0"
                           Grid.Row="7"
                           Content="Telefon-Nr.:" />
                    <Label Grid.Column="0"
                           Grid.Row="8"
                           Content="Konfesion:" />
                    <Label Grid.Column="0"
                           Grid.Row="9"
                           Content="Lohnsteuer-Kl.:" />
                    <Label Grid.Column="0"
                           Grid.Row="10"
                           Content="Kinder:" />
                    <Label Grid.Column="0"
                           Grid.Row="11"
                           Content="Bruttogehalt:" />


                    <TextBox x:Name="txtName"
                             Grid.Column="1"
                             Grid.Row="0"
                             TextWrapping="Wrap"
                             Margin="0,3" />
                    <TextBox x:Name="txtVorname"
                             Grid.Column="1"
                             Grid.Row="1"
                             TextWrapping="Wrap"
                             Margin="0,3" />
                    <TextBox x:Name="txtStrasse"
                             Grid.Column="1"
                             Grid.Row="2"
                             TextWrapping="Wrap"
                             Margin="0,3" />
                    <TextBox x:Name="txtHausnummer"
                             Grid.Column="1"
                             Grid.Row="3"
                             TextWrapping="Wrap"
                             Margin="0,3" />
                    <TextBox x:Name="txtPlz"
                             Grid.Column="1"
                             Grid.Row="4"
                             TextWrapping="Wrap"
                             Margin="0,3" />
                    <TextBox x:Name="txtOrt"
                             Grid.Column="1"
                             Grid.Row="5"
                             TextWrapping="Wrap"
                             Margin="0,3" />
                    <TextBox x:Name="txtGeburtsdatum"
                             Grid.Column="1"
                             Grid.Row="6"
                             TextWrapping="Wrap"
                             Margin="0,3" />
                    <TextBox x:Name="txtTelefon"
                             Grid.Column="1"
                             Grid.Row="7"
                             TextWrapping="Wrap"
                             Margin="0,3" />
                    <TextBox x:Name="txtKonfession"
                             Grid.Column="1"
                             Grid.Row="8"
                             TextWrapping="Wrap"
                             Margin="0,3" />
                    <TextBox x:Name="txtLohnsteuerKlasse"
                             Grid.Column="1"
                             Grid.Row="9"
                             TextWrapping="Wrap"
                             Margin="0,3" />
                    <TextBox x:Name="txtKinder"
                             Grid.Column="1"
                             Grid.Row="10"
                             TextWrapping="Wrap"
                             Margin="0,3" />
                    <TextBox x:Name="txtBruttogehalt"
                             Grid.Column="1"
                             Grid.Row="11"
                             TextWrapping="Wrap"
                             Margin="0,3" />


                </Grid>
                <DockPanel Grid.Column="1"
                           Margin="15,10,0,15">
                    <StackPanel DockPanel.Dock="Top"
                                Orientation="Vertical"
                                Margin="0"
                                HorizontalAlignment="Left">
                        <Label Content="Lohnkosten"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Bottom" />
                        <Separator Margin="0"
                                   Height="10" />
                        <UniformGrid Columns="2"
                                     Rows="2">
                            <Label Content="Arbeitgeberanteil:"
                                   VerticalAlignment="Bottom"
                                   FontSize="14"
                                   FontWeight="Bold" />
                            <TextBox x:Name="lblArbeitgeberKosten"
                                     Text="0,00"
                                     VerticalAlignment="Bottom"
                                     FontSize="14"
                                     Margin="0"
                                     Padding="5"
                                     FontWeight="Bold"
                                     HorizontalAlignment="Right"
                                     BorderThickness="0"
                                     IsReadOnly="True" />
                            <Label Content="Arbeitnehmeranteil:"
                                   VerticalAlignment="Bottom"
                                   FontSize="14"
                                   FontWeight="Bold" />
                            <TextBox x:Name="lblArbeitnehmerKosten_Copy"
                                     Text="0,00"
                                     VerticalAlignment="Bottom"
                                     FontSize="14"
                                     Margin="0"
                                     Padding="5"
                                     FontWeight="Bold"
                                     HorizontalAlignment="Right"
                                     BorderThickness="0"
                                     IsReadOnly="True" />
                        </UniformGrid>
                    </StackPanel>
                    <WrapPanel Orientation="Vertical"
                               DockPanel.Dock="Bottom"
                               VerticalAlignment="Bottom">
                        <Button x:Name="btnSpeichern"
                                Content="Eingaben _Speichern"
                                Click="btnSpeichern_Click"
                                Padding="8,1" />
                    </WrapPanel>
                </DockPanel>
            </Grid>
            <ListView Grid.Column="0"
                      Grid.Row="1"
                      x:Name="lstMitarbeiter">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name"
                                        Width="100"
                                        DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Vorname"
                                        Width="100"
                                        DisplayMemberBinding="{Binding Vorname}" />
                        <GridViewColumn Header="Strasse"
                                        Width="100"
                                        DisplayMemberBinding="{Binding Strasse}" />
                        <GridViewColumn Header="Hausnummer"
                                        Width="100"
                                        DisplayMemberBinding="{Binding Hausnummer}" />
                        <GridViewColumn Header="PLZ"
                                        Width="Auto"
                                        DisplayMemberBinding="{Binding Plz}" />
                        <GridViewColumn Header="Ort"
                                        Width="Auto"
                                        DisplayMemberBinding="{Binding Ort}" />
                        <GridViewColumn Header="Geburtsdatum"
                                        Width="100"
                                        DisplayMemberBinding="{Binding Geburtsdatum}" />
                        <GridViewColumn Header="Tel."
                                        Width="Auto"
                                        DisplayMemberBinding="{Binding Tel}" />
                        <GridViewColumn Header="Konfession"
                                        Width="100"
                                        DisplayMemberBinding="{Binding Konfession}" />
                        <GridViewColumn Header="Lohnsteuerklasse"
                                        Width="100"
                                        DisplayMemberBinding="{Binding LohnsteuerKlasse}" />
                        <GridViewColumn Header="Kinder"
                                        Width="100"
                                        DisplayMemberBinding="{Binding Kinder}" />
                        <GridViewColumn Header="Bruttogehalt"
                                        Width="100"
                                        DisplayMemberBinding="{Binding BruttoGehalt}" />
                        <GridViewColumn Header="Nettogehalt"
                                        Width="100"
                                        DisplayMemberBinding="{Binding NettoGehalt}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </ScrollViewer>
</Window>
